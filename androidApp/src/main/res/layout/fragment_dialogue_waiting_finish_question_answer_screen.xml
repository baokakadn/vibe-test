<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_waiting_finish_question_round_angle">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gif_done_dialogue_waiting_finish_question"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_120"
        android:src="@drawable/answer_screen_dialogue_check_mark_gif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_done_dialogue_waiting_finish_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:fontFamily="@font/capriola"
        android:gravity="center"
        android:text="@string/dialogue_waiting_question_finish_done"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_26"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gif_done_dialogue_waiting_finish_question" />

    <TextView
        android:id="@+id/tv_waiting_dialogue_waiting_finish_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:fontFamily="@font/capriola"
        android:gravity="center"
        android:text="@string/dialogue_waiting_question_finish"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_done_dialogue_waiting_finish_question" />

</androidx.constraintlayout.widget.ConstraintLayout>