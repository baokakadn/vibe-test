<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".main.view.WaitingActivity">

    <TextView
        android:id="@+id/tv_you_are_in_waiting_screen"
        android:layout_width="@dimen/dp_185"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_260"
        android:fontFamily="@font/capriola"
        android:text="@string/waiting_screen_you_are_in_tv"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_36"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_waiting_message_waiting_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:fontFamily="@font/capriola"
        android:text="@string/waiting_screen_please_waiting_tv"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_you_are_in_waiting_screen" />
</androidx.constraintlayout.widget.ConstraintLayout>